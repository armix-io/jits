{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "jsx": "react",
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["src/**/*.test.*"],
  "include": ["src/**/*"]
}
