{
  "name": "@armix/rntw",
  "version": "0.1.0",
  "author": "Peter Boyer <@ptboyer>",
  "description": "React Native Style/Theme Utilities, based on TailwindCSS.",
  "repository": "https://github.com/armix-io/rntw",
  "license": "MIT",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "dev": "yarn clean && yarn watch",
    "clean": "rm -rf lib",
    "build": "yarn build-package && yarn build-tsc",
    "build-tsc": "tsc",
    "build-package": "mkdir -p lib && cp package.json README.md lib",
    "watch": "concurrently -k -n tsc,ylc yarn:watch-tsc yarn:watch-ylc",
    "watch-tsc": "tsc --watch",
    "watch-ylc": "yarn build-package && nodemon --delay 500ms --watch lib --exec \"cd lib && yalc push --replace\""
  },
  "peerDependencies": {
    "react": "X.X.X",
    "react-native": "0.63.X"
  },
  "devDependencies": {
    "@types/react": "^17.0.3",
    "@types/react-native": "^0.63.51",
    "concurrently": "^6.0.0",
    "esbuild": "^0.8.57",
    "nodemon": "^2.0.7",
    "typescript": "^4.2.3"
  }
}
