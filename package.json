{
  "name": "@armix/rntw",
  "version": "0.1.0",
  "author": "Peter Boyer <@ptboyer>",
  "description": "React Native Style/Theme Utilities, based on TailwindCSS.",
  "repository": "https://github.com/armix-io/rntw",
  "license": "MIT",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "dev": "yarn clean && yarn watch",
    "dev-init": "yalc publish",
    "test": "jest",
    "test-debug": "node --inspect node_modules/.bin/jest --runInBand",
    "clean": "rm -rf dist",
    "build": "yarn build-pkg && yarn build-src",
    "build-src": "tsc",
    "build-pkg": "mkdir -p dist && cp package.json README.md dist",
    "watch": "concurrently -k -n src,pkg yarn:watch-src yarn:watch-pkg",
    "watch-src": "yarn build-src --watch",
    "watch-pkg": "yarn build-pkg && nodemon --delay 500ms --watch dist --exec \"cd dist && yalc push --replace\""
  },
  "peerDependencies": {
    "react": "X.X.X",
    "react-native": "0.63.X"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.3",
    "@types/react-native": "^0.63.51",
    "concurrently": "^6.0.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "react": "^17.0.1",
    "react-native": "^0.63.4",
    "typescript": "^4.2.3"
  }
}
